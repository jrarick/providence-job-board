{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noEmptyPattern": "off",
				"useHookAtTopLevel": "error"
			},
			"performance": {
				"noBarrelFile": "error",
				"noReExportAll": "error"
			},
			"style": {
				"noDefaultExport": "off",
				"noNegationElse": "error",
				"useConst": "off",
				"useExportType": "off",
				"useImportType": "off"
			},
			"suspicious": {
				"noConsoleLog": "warn",
				"noEmptyBlockStatements": "warn",
				"noSkippedTests": "error"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "warn",
					"fix": "safe",
					"options": {
						"attributes": ["className"],
						"functions": ["cn", "clsx", "cva"]
					}
				}
			}
		}
	},
	"formatter": { "enabled": true },
	"css": {
		"formatter": { "enabled": false },
		"linter": { "enabled": false }
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main",
		"useIgnoreFile": true
	},
	"overrides": [
		{
			"include": ["**/*.md"],
			"formatter": { "indentStyle": "tab" }
		}
	]
}
